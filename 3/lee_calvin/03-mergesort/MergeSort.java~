
public class MergeSort{
    //first implementation: naive, not optimized.
    public static  int[] merge1(int[] a, int[] b){
	int alength = a.length;
	int blength = b.length;
	int[] answer = new int[alength + blength];
	int progressa = 0;
	int progressb = 0;
	for(int i=0;i<a.length+blength;i++){
	    if(progressa == alength -1 || a[progressa] >  b[progressb]){
		answer[i] = b[progressb];
		progressb++;
	    }
	    else{
		answer[i] = a[progressa];
		progressa++;
	    }
	}
	return answer;
    }
    public static void main(String[] args){
	int[] a = new int{2,4,7,10,21,24,1990};
	int[] b = new int {0,2,5,42,234,990,201};
	int[] c = merge1(a,b);
	for(int i : c){
	    System.out.println(i);
	}
}